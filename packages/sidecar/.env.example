# Sidecar runtime
SIDECAR_ENV=development
SIDECAR_LOG_LEVEL=info

# Upstream server
SIDECAR_API_BASE_URL=http://localhost:3000
SIDECAR_WS_URL=ws://localhost:3000
SIDECAR_INGEST_PATH=/v1/ingest/events
SIDECAR_HEARTBEAT_PATH=/v1/ingest/heartbeat

# OIDC / tenant context
SIDECAR_OIDC_ISSUER=https://example-issuer
SIDECAR_OIDC_CLIENT_ID=teamclaude-sidecar
SIDECAR_TENANT_ID=tenant-local
SIDECAR_USER_ID=user-local

# Offline queue
SIDECAR_QUEUE_FILE=.teamclaude-queue.json
SIDECAR_FLUSH_INTERVAL_MS=2000
